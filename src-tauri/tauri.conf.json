{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "wgmodkit",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "os": {
        "all": true
      },
      "dialog": {
        "all": true,
        "open": true
      },
      "shell": {
        "all": false,
        "open": "((mailto:\\w+)\\|(tel:\\w+)\\|(https?://\\w+)|(/\\w+)).+"
      },
      "fs": {
        "all": true,
        "createDir": true,
        "exists": true,
        "readDir": true,
        "readFile": true,
        "writeFile": true,
        "scope": ["$HOME/**", "$APPCONFIG", "$APPCONFIG/*", "/ProgramFiles(x86)/Steam/steamapps/**","$HOME/Library/Application Support/Steam/steamapps/**","$HOME/.local/share/Steam/steamapps/**"]
      },
      "path": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "tk.wgroove.wgmodkit",
      "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Wargroove ModKit",
        "width": 800,
        "height": 600
      }
    ]
  }
}
